        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="170,199,0,0" VerticalAlignment="Top" Height="31" Width="110" FontFamily="Times New Roman" FontSize="20"/>
        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Height="40" Margin="285,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="255" RenderTransformOrigin="0.5,0.5" FontFamily="Times New Roman" FontSize="24">
