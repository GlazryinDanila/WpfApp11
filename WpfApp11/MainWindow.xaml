        <Border x:Name="authorizationBorder" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="460" Margin="155,40,0,0" VerticalAlignment="Top" Width="485"/>
        <Label x:Name="authorizationLabel" Content="Авторизация   в приложение" HorizontalAlignment="Left" Margin="187,49,0,0" VerticalAlignment="Top" Height="45" Width="373" FontFamily="Times New Roman" FontSize="24"/>
