        <Button x:Name="refreshButton" Content="random" HorizontalAlignment="Left" Margin="430,323,0,0" VerticalAlignment="Top" Width="185" Height="37" FontFamily="Times New Roman" FontSize="24" Click="refreshButton_Click"/>
        <TextBox x:Name="captchaGenTextBox" HorizontalAlignment="Left" Height="38" Margin="190,387,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" FontFamily="Times New Roman" FontSize="20"/>
        <TextBox x:Name="captchaTextBox" HorizontalAlignment="Left" Height="38" Margin="420,387,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195" FontFamily="Times New Roman" FontSize="20"/>
        <Button x:Name="loginButton" Content="vxod" HorizontalAlignment="Left" Margin="190,445,0,0" VerticalAlignment="Top" Width="425" Height="45" Click="loginButton_Click"/>
        <Label x:Name="blockLabel" Content="БЛОК БЛОК БЛОК КЛОК БЛОК ЛККЛ КФК ФЫДАЛДОФЫАОЛДФЫДЛОАФЫЛДОАФЧВЧВЧВXDXDX)D)" HorizontalAlignment="Left" Margin="170,94,0,0" VerticalAlignment="Top" Width="455"/>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Left" Height="47" Margin="330,120,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="295"/>

    </Grid>
</Window>
